# Docker Environment Configuration
# Copy this to .env.docker.local and customize for your environment

# PostgreSQL Database Configuration
POSTGRES_DB=flicklit
POSTGRES_USER=flicklit
POSTGRES_PASSWORD=secure_password_change_me

# Application Configuration
JWT_SECRET=super_secure_jwt_secret_change_in_production_at_least_32_chars
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Frontend Configuration
FRONTEND_URL=http://localhost
VITE_API_URL=http://localhost/api

# Optional: Valkey Configuration
VALKEY_PASSWORD=

# Optional: SSL Configuration (for production)
# SSL_CERT_PATH=./docker/ssl/cert.pem
# SSL_KEY_PATH=./docker/ssl/key.pem