{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "vite.config.ts",
    "prisma/**/*.ts",
    "scripts/**/*.ts"
  ]
}